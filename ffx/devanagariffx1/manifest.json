{
  "manifest_version": 2,
  "name": "Hindi Font Pack",
  "description": "This extension allows the user to see the unicode fonts in Hindi even if their system does not support it.",
  "version": "2.0.5",  
 "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
 "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
     "matches": ["<all_urls>"],
      "css" : ["gujfonts.css"]
    }
]
}
